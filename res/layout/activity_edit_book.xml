<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >
    
    <RelativeLayout     
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">  
     
     <RelativeLayout 
       android:layout_width="fill_parent"
       android:background="#4178e9"
       android:id="@+id/top_bar"  
       android:layout_height="wrap_content">  
   
    <Button
        android:id="@+id/open_left_panel"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:background="@drawable/format_indent_more" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name"/> 
    </RelativeLayout> 
           
	 <ScrollView 
     android:id="@+id/scroll"   
     android:layout_below="@+id/top_bar"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
     <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:id="@+id/layout_container"> 
       
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:text="@string/add_books"/>      
       
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="@string/title_label"/> 
	<EditText 
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:inputType="text"
        android:background="@drawable/backwithborder"
        android:padding="7dp"/>
	
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="@string/author_label"/> 
	<EditText 
        android:id="@+id/author"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:inputType="text"
        android:background="@drawable/backwithborder"
        android:padding="7dp"/>
	
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="@string/description_label"/> 
	<EditText 
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/backwithborder"
        android:padding="7dp"/>
	
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="@string/publication_year_label"/> 
	<EditText 
        android:id="@+id/publication"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:inputType="number"
        android:background="@drawable/backwithborder"
        android:padding="7dp"/>
	
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="@string/barter_type_label"/> 
        
	<RadioGroup 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		android:layout_marginLeft="10dp"
		android:id="@+id/barter_type">

		<RadioButton 
		    android:id="@+id/barter_type_label_lend"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="@string/barter_type_label_lend" >
		</RadioButton>
		
		<RadioButton 
		    android:id="@+id/barter_type_label_barter" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/barter_type_label_barter">
		</RadioButton>
		
		<RadioButton 
		    android:id="@+id/barter_type_label_give_away" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/barter_type_label_give_away">
		</RadioButton>
		
		<RadioButton 
		    android:id="@+id/barter_type_label_for_reading" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/barter_type_label_for_reading">
		</RadioButton>	
 	</RadioGroup>
 	
	<Button 
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:onClick="addBook"
        android:text="@string/submit" />
	
	</LinearLayout>    
    </ScrollView> 
      
    </RelativeLayout>

    <com.darvds.ribbonmenu.RibbonMenuView
        android:id="@+id/ribbonMenuView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.darvds.ribbonmenu.RibbonMenuView>

</FrameLayout>