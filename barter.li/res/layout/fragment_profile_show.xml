<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/profile_pic_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin_medium"
        android:contentDescription="@string/profile_pic_description"
        android:src="@drawable/empty_profile" />

    <li.barter.widgets.TypefacedTextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profile_pic_thumbnail"
        android:layout_toRightOf="@id/profile_pic_thumbnail"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Profile Name"
        android:textSize="@dimen/text_large"
        app:fontStyle="alegreya_regular" />

    <li.barter.widgets.TypefacedTextView
        android:id="@+id/about_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_toRightOf="@id/profile_pic_thumbnail"
        android:hint="@string/profile_description"
        android:textSize="@dimen/text_small"
        app:fontStyle="alegreya_regular" />

    <ImageView
        android:id="@+id/edit_current_location_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/about_me"
        android:layout_marginTop="@dimen/margin_minimum"
        android:layout_marginRight="@dimen/margin_minimum"
        android:layout_marginLeft="@dimen/margin_minimum"
        android:contentDescription="@string/edit_preferred_location_description"
        android:src="@drawable/ic_action_edit" />

    <li.barter.widgets.TypefacedTextView
        android:id="@+id/current_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/about_me"
        android:layout_below="@id/about_me"
        android:layout_toLeftOf="@id/edit_current_location_button"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginTop="@dimen/margin_minimum"
        android:text="4th Block Koramangala, Bangalore"
        android:layout_alignBottom="@id/edit_current_location_button"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_small"
        app:fontStyle="alegreya_regular" />

</RelativeLayout>