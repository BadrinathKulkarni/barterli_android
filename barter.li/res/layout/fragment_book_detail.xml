<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:dragView="@+id/name"
        sothree:panelHeight="72dp"
        sothree:paralaxOffset="100dp"
        sothree:shadowHeight="4dp" >

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:paddingTop="@dimen/activity_margin" >

            <RelativeLayout
                android:id="@+id/layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/label_isbn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_author"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:text="@string/isbn_label"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    android:visibility="gone"
                    app:fontStyle="condensed_regular" />

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/text_isbn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_isbn"
                    android:layout_marginTop="@dimen/margin_xx_small"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone"
                    app:fontStyle="regular" />

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/label_publication_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_description"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:text="@string/publication_date_label"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    app:fontStyle="condensed_regular" />

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/text_publication_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_publication_date"
                    android:layout_marginTop="@dimen/margin_xx_small"
                    android:textSize="@dimen/text_small"
                    app:fontStyle="regular" />

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/label_suggested_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_publication_date"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:text="@string/suggested_price_label"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    android:visibility="gone"
                    app:fontStyle="condensed_regular" />

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/text_suggested_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_suggested_price"
                    android:layout_marginTop="@dimen/margin_xx_small"
                    android:textSize="@dimen/text_small"
                    android:visibility="gone"
                    app:fontStyle="regular" />

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/label_barter_types"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/book_avatar"
                    android:layout_marginTop="@dimen/margin_xx_small"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_medium"
                    app:fontStyle="condensed_regular" />

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/label_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_barter_types"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@string/description_label"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    app:fontStyle="condensed_regular" />

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_description"
                    android:layout_marginTop="@dimen/margin_xx_small"
                    android:textSize="@dimen/text_small"
                    app:fontStyle="regular" />

                <LinearLayout
                    android:id="@+id/layout_barter_options1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_description"
                    android:orientation="horizontal" >

                    <li.barter.widgets.TypefacedTextView
                        android:id="@+id/text_publication_month"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="0.4"
                        app:fontStyle="regular" />

                    <li.barter.widgets.TypefacedTextView
                        android:id="@+id/text_publication_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="0.6"
                        app:fontStyle="regular" />
                </LinearLayout>

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/text_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_title"
                    android:layout_marginLeft="@dimen/margin_x_small"
                    android:layout_toRightOf="@+id/book_avatar"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_medium"
                    app:fontStyle="regular" />

                <li.barter.widgets.TypefacedTextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/margin_x_small"
                    android:layout_toRightOf="@+id/book_avatar"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    app:fontStyle="regular" />

                <ImageView
                    android:id="@+id/book_avatar"
                    android:layout_width="@dimen/book_image_width_for_detail"
                    android:layout_height="@dimen/book_height_for_detail"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/margin_large"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="72dp" >

                <li.barter.widgets.CircleImageView
                    android:id="@+id/image_user_circular"
                    android:layout_width="@dimen/book_user_image_size_profile"
                    android:layout_height="@dimen/book_user_image_size_profile"
                    android:layout_marginBottom="@dimen/margin_xx_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/margin_xx_small"
                    android:contentDescription="@string/app_name"
                    android:gravity="center_vertical"
                    app:borderColor="@color/white"
                    app:borderWidth="2dp"
                    app:cornerRadius="@dimen/book_user_image_size_profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_toRightOf="@id/image_user_circular"
                    android:orientation="horizontal" >

                    <li.barter.widgets.TypefacedTextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/owner_profile"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium"
                        app:fontStyle="regular" />

                    <ImageView
                        android:id="@+id/chatwithowner"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/activity_margin"
                        android:layout_weight=".5"
                        android:contentDescription="@string/app_name"
                        android:gravity="center_vertical|right"
                        android:src="@drawable/chaticon" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:background="@color/apptheme_color"
                android:gravity="center" />

            <android.support.v4.app.FragmentTabHost
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tabhost"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TabWidget
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:orientation="horizontal" />

                    <FrameLayout
                        android:id="@+id/tabFrameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </android.support.v4.app.FragmentTabHost>

